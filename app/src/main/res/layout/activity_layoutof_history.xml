<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".layoutofHistory">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="598dp"
        android:layout_margin="10dp"
        android:background="#221F1F"
        app:cardBackgroundColor="#FAF8F8"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="128dp"
                android:layout_height="125dp"
                android:background="@drawable/ic_face"
                android:translationX="150dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/nmaeinhistory"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Name:"
                android:textColor="#673AB7"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.521"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.009" />

            <TextView
                android:id="@+id/Addressinh"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:text="Address:"
                android:textColor="#673AB7"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/nmaeinhistory"
                app:layout_constraintStart_toStartOf="@+id/nmaeinhistory"
                app:layout_constraintTop_toBottomOf="@+id/nmaeinhistory" />

            <TextView
                android:id="@+id/entinh"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginEnd="1dp"
                android:layout_marginRight="1dp"
                android:text="Entry Time:"
                android:textColor="#673AB7"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/rextdinh"
                app:layout_constraintEnd_toStartOf="@+id/entdinh"
                app:layout_constraintStart_toStartOf="@+id/extinh" />

            <TextView
                android:id="@+id/entdinh"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:text="Entry Date:"
                android:textColor="#673AB7"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/exdinh"
                app:layout_constraintStart_toEndOf="@+id/extinh"
                tools:layout_editor_absoluteY="120dp" />

            <TextView
                android:id="@+id/extinh"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:text="Exit Time:"
                android:textColor="#673AB7"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/entinh"
                app:layout_constraintEnd_toStartOf="@+id/exdinh"
                app:layout_constraintStart_toStartOf="@+id/Addressinh"
                app:layout_constraintTop_toBottomOf="@+id/Addressinh" />

            <TextView
                android:id="@+id/exdinh"
                android:layout_width="409dp"
                android:layout_height="59dp"
                android:layout_marginEnd="64dp"
                android:layout_marginRight="64dp"
                android:text="Exit Date:"
                android:textColor="#673AB7"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/entdinh"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Addressinh"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/rextdinh"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:text="Real Exit Time And Date:"
                android:textColor="#673AB7"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/entinh"
                app:layout_constraintTop_toBottomOf="@+id/entdinh" />

            <TextView
                android:id="@+id/rentdinh2"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:text="Real Entry Time And Date:"
                android:textColor="#673AB7"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/rextdinh"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/rextdinh"
                app:layout_constraintTop_toBottomOf="@+id/rextdinh"
                app:layout_constraintVertical_bias="0.0" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>