<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundd"
    android:tag="2"
    tools:context=".regselectionpage">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_45sdp"
            app:layout_constraintBottom_toTopOf="@+id/s"
            app:layout_constraintEnd_toEndOf="@+id/s"
            app:layout_constraintStart_toStartOf="@+id/s"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.431"
            app:srcCompat="@drawable/jgiicon" />

        <TextView
            android:id="@+id/textLogin2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_20sdp"

            android:background="@drawable/inpuut_bg"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="Hostel Management App"
            android:textColor="#112F85"
            android:textSize="20sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/s"
            android:layout_width="305dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/inpuut_bg"
            android:onClick="changeUser"
            android:tag="1"
            android:text="Students"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="#9241EF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.462"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/p"
            android:layout_width="305dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/inpuut_bg"
            android:onClick="changeUser"
            android:tag="2"
            android:text="Parents"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="#9241EF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/s"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/s"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.353"
            tools:ignore="MissingConstraints" />


        <Button
            android:id="@+id/w"
            android:layout_width="305dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/inpuut_bg"
            android:onClick="changeUser"
            android:tag="4"
            android:text="warden"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="#9241EF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/p"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/p"
            app:layout_constraintTop_toBottomOf="@+id/p"
            app:layout_constraintVertical_bias="0.117"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/g"
            android:layout_width="305dp"
            android:layout_height="54dp"

            android:layout_gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/inpuut_bg"
            android:onClick="changeUser"
            android:tag="3"
            android:text="GateKeeper"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="#9241EF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/w"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/w"
            app:layout_constraintTop_toBottomOf="@+id/p"
            app:layout_constraintVertical_bias="0.34"
            tools:ignore="MissingConstraints" />
    </LinearLayout>




</RelativeLayout>