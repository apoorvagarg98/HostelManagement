<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GatekeeperLogin">

    <EditText
        android:id="@+id/Cemail"
        android:layout_width="350dp"
        android:layout_height="58dp"

        android:layout_marginTop="28dp"
        android:background="@drawable/inpuut_bg"
        android:drawableLeft="@drawable/ic_login_email_24"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="EMAIL"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/colorBlack"
        android:textColorHighlight="@color/colorBlack"
        android:textColorHint="@color/colorBlack"
        android:textColorLink="@color/colorBlack"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/cLogin3"
        app:layout_constraintStart_toStartOf="@+id/cLogin3"
        app:layout_constraintTop_toBottomOf="@+id/cLogin3"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/cLogin3"
        android:layout_width="290dp"
        android:layout_height="63dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="GUARD'S LOG IN"
        android:textColor="@color/colorBlack"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.062" />

    <Button
        android:id="@+id/clogin"
        android:layout_width="232dp"
        android:layout_height="49dp"

        android:layout_marginTop="28dp"

        android:background="@drawable/inpuut_bg"
        android:text="LOGIN"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@color/design_default_color_primary_variant"
        app:layout_constraintEnd_toEndOf="@+id/cPassword3"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="@+id/cPassword3"
        app:layout_constraintTop_toBottomOf="@+id/r4"
        app:rippleColor="@color/colorRed" />

    <TextView
        android:id="@+id/cforgotPassword"
        android:layout_width="167dp"
        android:layout_height="46dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:shadowColor="@color/colorBlack"
        android:text="Forgot Password?"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlack"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cregister2"
        app:layout_constraintStart_toStartOf="@+id/cregister2"
        app:layout_constraintTop_toBottomOf="@+id/cregister2"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/cregister2"
        android:layout_width="223dp"
        android:layout_height="42dp"
        android:layout_marginTop="24dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="Dont have an Account?"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/clogin"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/clogin"
        app:layout_constraintTop_toBottomOf="@+id/cprogressBar3"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/cPassword3"
        android:layout_width="350dp"
        android:layout_height="58dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/inpuut_bg"
        android:drawableLeft="@drawable/ic_password"

        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="PASSWORD"
        android:inputType="textPassword"

        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlack"
        android:textColorLink="@color/colorBlack"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/Cemail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Cemail"
        app:layout_constraintTop_toBottomOf="@+id/Cemail" />

    <ProgressBar
        android:id="@+id/cprogressBar3"
        style="?android:attr/progressBarStyle"
        android:layout_width="93dp"
        android:layout_height="103dp"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/clogin"
        app:layout_constraintHorizontal_bias="0.467"
        app:layout_constraintStart_toStartOf="@+id/clogin"
        app:layout_constraintTop_toBottomOf="@+id/clogin" />

    <CheckBox
        android:id="@+id/r4"
        android:layout_width="146dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:text="Remember Me"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/checkBoxg"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/cPassword3"
        app:layout_constraintTop_toBottomOf="@+id/cPassword3" />

    <CheckBox
        android:id="@+id/checkBoxg"
        android:layout_width="146dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:text="Show Password"
        android:textColor="#050505"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/cPassword3"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/cPassword3"
        app:layout_constraintTop_toBottomOf="@+id/cPassword3" />
</androidx.constraintlayout.widget.ConstraintLayout>