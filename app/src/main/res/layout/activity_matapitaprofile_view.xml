<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundd"
    tools:context=".matapitaprofileView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B18BF3"

        android:orientation="vertical"

        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-3dp"
        tools:layout_editor_absoluteY="41dp">

        <TextView
            android:id="@+id/usernameparentsshow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"

            android:text="Name:"
            android:textColor="#070707"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/cardView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.054"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.128" />

        <TextView
            android:id="@+id/showPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Phone No:"
            android:textColor="#070707"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/usernameparentsshow"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/usernameparentsshow"
            app:layout_constraintTop_toBottomOf="@+id/usernameparentsshow" />

        <TextView
            android:id="@+id/showEmail"
            android:layout_width="87dp"
            android:layout_height="37dp"
            android:layout_marginTop="1dp"
            android:text="Email:"
            android:textColor="#070707"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/cardView"
            app:layout_constraintEnd_toEndOf="@+id/showPhone"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/showPhone"
            app:layout_constraintTop_toBottomOf="@+id/showPhone"
            app:layout_constraintVertical_bias="0.0" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:cardBackgroundColor="#BEADF1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:text=" Student Out-Pass"

                android:textColor="#0C276A"
                android:textColorHint="#0E0E0E"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/nameinstudentutpass"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.574"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.4" />

            <EditText
                android:id="@+id/nameinstudentutpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/inpuut_bg"
                android:backgroundTint="#ECE4FB"
                android:drawableLeft="@drawable/ic_baseline_text_fields_24"
                android:drawablePadding="5dp"

                android:hint="Name"


                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"

                android:shadowColor="#FBFBFB"
                android:textAllCaps="false"
                android:textColor="#0A0B0B"
                android:textColorHighlight="#090909"
                android:textColorHint="#020202"
                android:textColorLink="#FAF3F3"
                android:textSize="14sp"
                android:textStyle="normal"
                tools:layout_editor_absoluteX="7dp"
                tools:layout_editor_absoluteY="80dp" />

            <EditText
                android:id="@+id/adress2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/inpuut_bg"
                android:backgroundTint="#ECE4FB"
                android:drawableLeft="@drawable/ic_baseline_add_location_24"
                android:drawablePadding="5dp"

                android:hint=" Address "


                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"

                android:shadowColor="#FBFBFB"
                android:textAllCaps="false"
                android:textColor="#0A0B0B"
                android:textColorHighlight="#090909"
                android:textColorHint="#020202"
                android:textColorLink="#FAF3F3"
                android:textSize="14sp"
                android:textStyle="normal"
                tools:layout_editor_absoluteX="7dp"
                tools:layout_editor_absoluteY="80dp" />

            <EditText
                android:id="@+id/exitTime2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/inpuut_bg"
                android:backgroundTint="#ECE4FB"
                android:drawableLeft="@drawable/ic_time"
                android:drawablePadding="5dp"

                android:hint=" Enter Exit Time"


                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"

                android:shadowColor="#FBFBFB"
                android:textAllCaps="false"
                android:textColor="#0A0B0B"
                android:textColorHighlight="#090909"
                android:textColorHint="#020202"
                android:textColorLink="#FAF3F3"
                android:textSize="14sp"
                android:textStyle="normal"
                tools:layout_editor_absoluteX="7dp"
                tools:layout_editor_absoluteY="80dp" />

            <EditText
                android:id="@+id/exitDate2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/inpuut_bg"
                android:backgroundTint="#ECE4FB"
                android:drawableLeft="@drawable/ic_baseline_calendar_today_2421"
                android:drawablePadding="5dp"

                android:hint="Enter Exit Date"


                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"

                android:shadowColor="#FBFBFB"
                android:textAllCaps="false"
                android:textColor="#0A0B0B"
                android:textColorHighlight="#090909"
                android:textColorHint="#020202"
                android:textColorLink="#FAF3F3"
                android:textSize="14sp"
                android:textStyle="normal"
                tools:layout_editor_absoluteX="7dp"
                tools:layout_editor_absoluteY="80dp" />


            <EditText
                android:id="@+id/entryTime2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/inpuut_bg"
                android:backgroundTint="#ECE4FB"
                android:drawableLeft="@drawable/ic_baseline_access_time_24"
                android:drawablePadding="5dp"

                android:hint=" Enter Entry Time"


                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"

                android:shadowColor="#FBFBFB"
                android:textAllCaps="false"
                android:textColor="#0A0B0B"
                android:textColorHighlight="#090909"
                android:textColorHint="#020202"
                android:textColorLink="#FAF3F3"
                android:textSize="14sp"
                android:textStyle="normal"
                tools:layout_editor_absoluteX="7dp"
                tools:layout_editor_absoluteY="80dp" />

            <EditText
                android:id="@+id/entryDate2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/inpuut_bg"
                android:backgroundTint="#ECE4FB"
                android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
                android:drawablePadding="5dp"

                android:hint="Enter Entry date"


                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"

                android:shadowColor="#FBFBFB"
                android:textAllCaps="false"
                android:textColor="#0A0B0B"
                android:textColorHighlight="#090909"
                android:textColorHint="#020202"
                android:textColorLink="#FAF3F3"
                android:textSize="14sp"
                android:textStyle="normal"
                tools:layout_editor_absoluteX="7dp"
                tools:layout_editor_absoluteY="80dp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>



    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="305dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/cardView"
        app:layout_constraintTop_toTopOf="@+id/cardView">

    </ListView>

    <Button
        android:id="@+id/request9810"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="wrap_content"
        android:background="@drawable/btnn_bg"
        android:text="request"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="#EB6319CA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.86" />






    <Button
        android:id="@+id/ViewbacchokiHistory"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="wrap_content"
        android:background="@drawable/btnn_bg"
        android:text="History"
        android:textColor="@color/colorWhite"

        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="#EB6319CA"
        app:layout_constraintBottom_toBottomOf="@+id/cancelRequest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cancelRequest"
        app:layout_constraintTop_toTopOf="@+id/cancelRequest" />

    <Button
        android:id="@+id/cancelRequest"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="wrap_content"
        android:backgroundTint="#EB6319CA"
        android:background="@drawable/btnn_bg"
        android:text="cancel/new Request"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.963" />

    <TextView
        android:id="@+id/status2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pending by Warden"
        android:textColor="#090909"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.78" />

</androidx.constraintlayout.widget.ConstraintLayout>