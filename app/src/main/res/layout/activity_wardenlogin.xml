<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".wardenlogin">

    <EditText
        android:id="@+id/lemail"
        android:layout_width="350dp"
        android:layout_height="58dp"

        android:layout_marginTop="32dp"
        android:background="@drawable/inpuut_bg"
        android:drawableLeft="@drawable/ic_login_email_24"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="EMAIL"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColorHint="@color/colorBlack"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textLogin4"
        app:layout_constraintStart_toStartOf="@+id/textLogin4"
        app:layout_constraintTop_toBottomOf="@+id/textLogin4" />

    <TextView
        android:id="@+id/textLogin4"
        android:layout_width="274dp"
        android:layout_height="54dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="WARDEN'S LOGIN"
        android:textColor="@color/colorBlack"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.049" />

    <Button
        android:id="@+id/lbutton"
        android:layout_width="232dp"
        android:layout_height="49dp"

        android:layout_marginTop="76dp"
        android:background="@drawable/btnn_bg"
        android:text="LOGIN"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@color/design_default_color_primary_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lpass"
        app:rippleColor="@color/colorRed" />

    <TextView
        android:id="@+id/lforpass"
        android:layout_width="186dp"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:shadowColor="@color/colorBlack"
        android:text="Forgot Password?"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlack"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/lreg"
        app:layout_constraintStart_toStartOf="@+id/lreg"
        app:layout_constraintTop_toBottomOf="@+id/lreg"
        app:layout_constraintVertical_bias="0.166"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/lreg"
        android:layout_width="228dp"
        android:layout_height="44dp"
        android:layout_marginTop="32dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="Dont have an Account?"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/lprogress"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/lprogress"
        app:layout_constraintTop_toBottomOf="@+id/lprogress"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/lpass"
        android:layout_width="350dp"
        android:layout_height="58dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/inpuut_bg"
        android:drawableLeft="@drawable/ic_password"
        android:drawableRight="@drawable/ic_baseline_remove_red_eye_24"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="PASSWORD"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:textColorHint="@color/colorBlack"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/lemail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/lemail"
        app:layout_constraintTop_toBottomOf="@+id/lemail"
        app:passwordToggleEnabled="true" />

    <ProgressBar
        android:id="@+id/lprogress"
        style="?android:attr/progressBarStyle"
        android:layout_width="93dp"
        android:layout_height="103dp"
        android:layout_marginTop="24dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/lbutton"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/lbutton"
        app:layout_constraintTop_toBottomOf="@+id/lbutton" />

    <CheckBox
        android:id="@+id/remember3"
        android:layout_width="108dp"
        android:layout_height="42dp"
        android:layout_marginTop="12dp"
        android:text="Check Box"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/lbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/lpass"
        app:layout_constraintTop_toBottomOf="@+id/lpass" />

    <CheckBox
        android:id="@+id/checkBoxw"
        android:layout_width="115dp"
        android:layout_height="49dp"
        android:layout_marginTop="20dp"
        android:text="CheckBox"
        app:layout_constraintBottom_toBottomOf="@+id/lbutton"
        app:layout_constraintEnd_toEndOf="@+id/lpass"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/remember3"
        app:layout_constraintTop_toBottomOf="@+id/lpass"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>