<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".wardenlogin">

    <EditText
        android:id="@+id/lemail"
        android:layout_width="350dp"
        android:layout_height="51dp"

        android:layout_marginTop="120dp"
        android:background="@drawable/inpuut_bg"
        android:drawableLeft="@android:drawable/ic_dialog_email"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="EMAIL"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColorHint="@color/colorBlack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textLogin4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOG IN"
        android:textColor="@color/colorBlack"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.049" />

    <Button
        android:id="@+id/lbutton"
        android:layout_width="232dp"
        android:layout_height="49dp"

        android:layout_marginTop="32dp"
        android:background="@drawable/btnn_bg"

        android:text="LOG IN"
        android:textColor="@color/colorWhite"
        app:backgroundTint="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="@+id/lpass"
        app:layout_constraintStart_toStartOf="@+id/lpass"
        app:layout_constraintTop_toBottomOf="@+id/lpass"
        app:rippleColor="@color/colorRed" />

    <TextView
        android:id="@+id/lforpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="@color/colorBlack"
        android:text="Forgot Password?"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlack"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/lreg"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/lreg"
        app:layout_constraintTop_toBottomOf="@+id/lreg"
        app:layout_constraintVertical_bias="0.12"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/lreg"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:text="Dont have an Account?"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/lprogress"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintStart_toStartOf="@+id/lprogress"
        app:layout_constraintTop_toBottomOf="@+id/lprogress"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/lpass"
        android:layout_width="350dp"
        android:layout_height="57dp"

        android:layout_marginTop="28dp"
        android:background="@drawable/inpuut_bg"
        android:drawableLeft="@android:drawable/ic_partial_secure"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="PASSWORD"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColorHint="@color/colorBlack"
        app:layout_constraintEnd_toEndOf="@+id/lemail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/lemail"
        app:layout_constraintTop_toBottomOf="@+id/lemail" />

    <ProgressBar
        android:id="@+id/lprogress"
        style="?android:attr/progressBarStyle"
        android:layout_width="93dp"
        android:layout_height="103dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/lbutton"
        app:layout_constraintHorizontal_bias="0.431"
        app:layout_constraintStart_toStartOf="@+id/lbutton"
        app:layout_constraintTop_toBottomOf="@+id/lbutton" />
</androidx.constraintlayout.widget.ConstraintLayout>