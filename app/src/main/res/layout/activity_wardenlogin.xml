<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/p"
    tools:context=".wardenlogin">

    <EditText
        android:id="@+id/lemail"
        android:layout_width="350dp"
        android:layout_height="58dp"

        android:layout_marginTop="32dp"
        android:background="@drawable/inpuut_bg"
        android:drawableLeft="@drawable/ic_login_email_24"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="EMAIL"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColorHint="@color/colorBlack"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textLogin4"
        app:layout_constraintStart_toStartOf="@+id/textLogin4"
        app:layout_constraintTop_toBottomOf="@+id/textLogin4" />

    <TextView
        android:id="@+id/textLogin4"
        android:layout_width="307dp"
        android:layout_height="55dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="WARDEN'S LOGIN"
        android:textColor="@color/colorBlack"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.049" />

    <Button
        android:id="@+id/lbutton"
        android:layout_width="232dp"
        android:layout_height="49dp"

        android:layout_marginTop="28dp"
        android:background="@drawable/btnn_bg"
        android:text="LOGIN"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@color/design_default_color_primary_dark"
        app:layout_constraintEnd_toEndOf="@+id/checkBoxw"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toStartOf="@+id/remember3"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxw"
        app:rippleColor="@color/colorRed" />

    <TextView
        android:id="@+id/lforpass"
        android:layout_width="196dp"
        android:layout_height="44dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:shadowColor="@color/colorBlack"
        android:text="Forgot Password?"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlack"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/lreg"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="@+id/lreg"
        app:layout_constraintTop_toBottomOf="@+id/lreg"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/lreg"
        android:layout_width="245dp"
        android:layout_height="51dp"
        android:layout_marginTop="24dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="Dont have an Account?"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/lbutton"
        app:layout_constraintHorizontal_bias="0.277"
        app:layout_constraintStart_toStartOf="@+id/lbutton"
        app:layout_constraintTop_toBottomOf="@+id/lprogress"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/lpass"
        android:layout_width="350dp"
        android:layout_height="58dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/inpuut_bg"
        android:drawableLeft="@drawable/ic_password"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="PASSWORD"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:textColorHint="@color/colorBlack"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/lemail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/lemail"
        app:layout_constraintTop_toBottomOf="@+id/lemail"
        app:passwordToggleEnabled="true" />

    <ProgressBar
        android:id="@+id/lprogress"
        style="?android:attr/progressBarStyle"
        android:layout_width="93dp"
        android:layout_height="103dp"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/lbutton"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/lbutton"
        app:layout_constraintTop_toBottomOf="@+id/lbutton" />

    <CheckBox
        android:id="@+id/remember3"
        android:layout_width="146dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:text="Remember Me"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/lpass"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/lpass"
        app:layout_constraintTop_toBottomOf="@+id/lpass" />

    <CheckBox
        android:id="@+id/checkBoxw"
        android:layout_width="146dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:text="Show Password"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/lpass"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toStartOf="@+id/lpass"
        app:layout_constraintTop_toBottomOf="@+id/lpass" />
</androidx.constraintlayout.widget.ConstraintLayout>