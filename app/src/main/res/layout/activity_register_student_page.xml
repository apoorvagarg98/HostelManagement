<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBF9F9"
    tools:context=".registerStudentPage">

    <EditText
        android:id="@+id/Emailreg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/common_google_signin_btn_icon_dark"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:shadowColor="#020202"
        android:textColor="#070707"
        android:textColorHighlight="#100F0F"
        android:textColorHint="#0C0C0C"
        android:textColorLink="#070707"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.323"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.308" />

    <Button
        android:id="@+id/registeruser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:text="register user"
        app:layout_constraintBottom_toTopOf="@+id/backToLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.348"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/backToLogin"
        android:layout_width="148dp"
        android:layout_height="62dp"
        android:layout_marginBottom="60dp"
        android:text="Already have an acc?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.346"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/passwordreg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@android:drawable/ic_lock_lock"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:shadowColor="#0E0E0E"
        android:textColor="#0E0E0E"
        android:textColorHighlight="#070707"
        android:textColorHint="#0C0C0C"
        android:textColorLink="#090909"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.343"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.662" />

    <EditText
        android:id="@+id/nameStud"
        android:layout_width="214dp"
        android:layout_height="40dp"
        android:layout_marginBottom="36dp"
        android:background="#F6F5F5"
        android:drawableLeft="@drawable/ic_login_email_24"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:shadowColor="#0E0E0E"
        android:textColor="#0E0E0E"
        android:textColorHighlight="#070707"
        android:textColorHint="#0C0C0C"
        android:textColorLink="#090909"
        app:layout_constraintBottom_toTopOf="@+id/Emailreg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.34"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/phoneStud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@android:drawable/ic_dialog_dialer"
        android:ems="10"
        android:hint="phoneNo"
        android:inputType="phone"
        android:shadowColor="#0E0E0E"
        android:textColor="#0E0E0E"
        android:textColorHighlight="#070707"
        android:textColorHint="#0C0C0C"
        android:textColorLink="#090909"
        app:layout_constraintBottom_toTopOf="@+id/usnStud"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.323"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Emailreg" />

    <EditText
        android:id="@+id/usnStud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:drawableLeft="@android:drawable/stat_notify_chat"
        android:ems="10"
        android:hint="USN"
        android:inputType="textPersonName"
        android:shadowColor="#0E0E0E"
        android:textColor="#0E0E0E"
        android:textColorHighlight="#070707"
        android:textColorHint="#0C0C0C"
        android:textColorLink="#090909"
        app:layout_constraintBottom_toTopOf="@+id/passwordreg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.323"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="112dp"
        android:layout_height="103dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>